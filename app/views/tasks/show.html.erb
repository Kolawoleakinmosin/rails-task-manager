<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Edit this task", edit_task_path(@task) %>
<h3><%= link_to "Back To Task", tasks_path %></h3>
<%= link_to "Delete this task",
  task_path(@task),
  data: { turbo_method: "delete", turbo_confirm: "Are you sure?" }
  %>
